			</div>
		</div>
		<div id="addBtn" class="flex items-center justify-center bg-dark-gray w-10 h-10 cursor-pointer rounded text-white text-xl font-bold fixed bottom-5 right-5 shadow-2xl z-30">+</div>
	</div>
	<script type="text/javascript">
		addBtn = document.getElementById('addBtn');
		addTask = document.getElementById('addTask');
		taskForm = document.getElementById('new_task_form');
		addBtn.addEventListener('click', () => {
			if (addTask.value == '') {
				addTask.focus();
			}
			else {
				taskForm.submit();
			}
		});

		addTask.onkeydown = function(e){
			if(e.keyCode == 13){
				if (addTask.value == '') {
					taskForm.submit();
				}
			}
		};
	</script>
